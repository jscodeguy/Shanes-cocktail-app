{% layout 'layout.liquid'%}
{% block content %}
<div>
    <h2 class="display-6">Try this drink!</h2>
    <div class="row">
        {% for drink in drinks %}
        <div class="card" style="width: 50rem;">
            <h5 class="card-header">{{ drink.strDrink}}</h5>
            <div class="card-body">
                <a href="/drink/view/{{drink.idDrink}}"> <img src="{{drink.strDrinkThumb}}" width="600px" height="600px"></a>
            </div>
        </div>
        {% endfor %}
        
    </div>
</div>
{% endblock %}